@model IEnumerable<BlobStorageDemo.Models.BlobItem>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Length)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Length)
                </td>
                <td>
                    @Html.ActionLink("Download", "DownLoadBlob", new {  filename =item.Name }) |
                    @Html.ActionLink("Delete", "DeleteBlob", new { filename = item.Name })
                </td>
            </tr>
        }
    </tbody>
</table>
